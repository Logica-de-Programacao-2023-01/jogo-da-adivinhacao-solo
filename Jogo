package main

import (
	"fmt"
	"math/rand"
	"time"
)

func main() {

	var palpite int
	var x string

	for contador := 0; ; contador++ {

		rand.Seed(time.Now().UnixNano())
		resposta := rand.Intn(100) + 1

		for contador2 := 0; ; contador2++ {

			fmt.Print("Digite um número entre 1 e 100: ")
			fmt.Scan(&palpite)

			if palpite > resposta {
				fmt.Println("O número é menor que", resposta)
			} else if palpite < resposta {
				fmt.Println("O número é maior que", resposta)
			} else {
				fmt.Printf("Parabéns, Você acertou! Você utilizou %d tentativas\n", contador2)
				break
			}
		}

		fmt.Print("Deseja jogar novamente (s/n)? ")
		fmt.Scan(&x)

		if x != "s" {
			break

		}
		fmt.Printf("Você jogou %d jogos, as tentativas desses jogos são de %d tentativas\n", contador, contador2)
	

	}

}

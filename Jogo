package main

import (
	"fmt"
	"math/rand"
	"time"
)

func main() {

	var jogarNovamente string
	var tentativas []int

	for contador2 := 0; ; contador2++ {

		rand.Seed(time.Now().UnixNano())
		resposta := rand.Intn(100) + 1

		var palpite int

		numTentativas := 0

		for contador3 := 0; ; contador3++ {

			fmt.Print("Digite um número entre 1 e 100: ")
			fmt.Scan(&palpite)

			numTentativas++

			if palpite > resposta {
				fmt.Println("O número é menor que", resposta)
			} else if palpite < resposta {
				fmt.Println("O número é maior que", resposta)
			} else {
				fmt.Printf("Parabéns, Você acertou! Você utilizou %d tentativas\n", numTentativas)
				break
			}
		}

		tentativas = append(tentativas, numTentativas)

		fmt.Print("Deseja jogar novamente (s/n)? ")
		fmt.Scan(&jogarNovamente)

		if jogarNovamente != "s" {
			break
			
		}
		fmt.Printf("Você jogou %d jogos, as tentativas desses jogos são de %d tentativas\n", contador2, numTentativas)

	}

}
